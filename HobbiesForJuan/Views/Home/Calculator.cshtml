@{
    ViewData["Title"] = "Calculator";
}
<h1>@ViewData["Title"]</h1>

<h3>Use this calculator to consider if you'd like tutoring for movies</h3>

<form>
    <p>How many hours of tutoring do you need per week? <input type="number" id="hours" require min="0" max="40" width="150" placeholder="Please enter a number" /></p>
    
    <br />
    <p>My Hourly Rate --> <input readonly type="text" value="$50.00" /></p>
    
    <br />
    <button id="calculate">Calculate</button>
</form>

<p>The total charge for a week of tutoring will be: <p id="result"></p></p>
